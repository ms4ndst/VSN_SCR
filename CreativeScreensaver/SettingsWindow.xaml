<Window x:Class="VismaSoftwareNordic.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="540" WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <StackPanel Width="120">
                <TextBlock Text="Slide seconds"/>
                <TextBox x:Name="SlideSecondsText" Text="8" />
            </StackPanel>
            <StackPanel Width="120" Margin="12,0,0,0">
                <TextBlock Text="Transition seconds"/>
                <TextBox x:Name="TransitionSecondsText" Text="2" />
            </StackPanel>
            <StackPanel Width="140" Margin="12,0,0,0">
                <TextBlock Text="Animation"/>
                <ComboBox x:Name="AnimationCombo" SelectedIndex="0">
                    <ComboBoxItem Content="Random"/>
                    <ComboBoxItem Content="KenBurns"/>
                    <ComboBoxItem Content="Pan"/>
                    <ComboBoxItem Content="Rotate"/>
                    <ComboBoxItem Content="Parallax"/>
                    <ComboBoxItem Content="CrossZoom"/>
                    <ComboBoxItem Content="Tiles"/>
                </ComboBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,0,0,12">
            <TextBlock Text="Animation intensity (0 = subtle, 100 = dramatic)"/>
            <DockPanel Margin="0,4,0,0">
                <TextBlock x:Name="IntensityLabel" Text="50" Width="30" TextAlignment="Right" Margin="0,0,8,0"/>
                <Slider x:Name="IntensitySlider" Minimum="0" Maximum="100" Value="50" TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="IntensitySlider_ValueChanged"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,0,0,12">
            <TextBlock Text="Display scale (%) â€” controls letterbox margin"/>
            <DockPanel Margin="0,4,0,0">
                <TextBlock x:Name="DisplayScaleLabel" Text="90" Width="30" TextAlignment="Right" Margin="0,0,8,0"/>
                <Slider x:Name="DisplayScaleSlider" Minimum="70" Maximum="100" Value="90" TickFrequency="5" IsSnapToTickEnabled="True" ValueChanged="DisplayScaleSlider_ValueChanged"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <CheckBox x:Name="ShowClockCheck" Content="Show date/time between images" IsChecked="True"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <StackPanel Width="160">
                    <TextBlock Text="Clock seconds"/>
                    <TextBox x:Name="ClockSecondsText" Text="3"/>
                </StackPanel>
                <StackPanel Width="220" Margin="12,0,0,0">
                    <TextBlock Text="Clock font family"/>
                    <TextBox x:Name="ClockFontText" Text="FiraMono Nerd Font"/>
                </StackPanel>
                <StackPanel Width="120" Margin="12,0,0,0">
                    <TextBlock Text="Font size"/>
                    <TextBox x:Name="ClockFontSizeText" Text="64"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <CheckBox x:Name="RandomizeCheck" Grid.Row="4" Content="Randomize image order" IsChecked="True" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Width="100" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
